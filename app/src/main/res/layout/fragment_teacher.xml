<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_teacher_longtitude"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/fragment_teacher_longtitude"
        style="@style/textview_fragment_teacher"
        />

    <TextView
        android:id="@+id/fragment_teacher_latitude"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/fragment_teacher_longtitude"
        android:text="@string/fragment_teacher_latitude"
        style="@style/textview_fragment_teacher"
        />

    <TextView
        android:id="@+id/tv_fragment_teacher_longtitude"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/fragment_teacher_longtitude"
        style="@style/textview_fragment_teacher"
        />

    <TextView
        android:id="@+id/tv_fragment_teacher_latitude"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/fragment_teacher_longtitude"
        android:layout_toRightOf="@id/fragment_teacher_latitude"
        style="@style/textview_fragment_teacher"
        />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:text="@string/teacher_send"
        />

</RelativeLayout>